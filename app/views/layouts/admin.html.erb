<!-- Layout pour la partie administration -->

<html>
<head>
<title><%= titre %></title>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Happy+Monkey" rel="stylesheet">
<%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name %>">

<header class="header-admin">
  <nav>
    <ul>
      <li><%= link_to 'Webzines', magazines_path %></li>
      <li><%= link_to 'Mangas', mangas_path %></li>
      <li><%= link_to 'Blog', Blog %></li>
    </ul>
    <div class="header-logo">
      <%= link_to image_tag('KD.png',:class=> 'header-logo', alt: 'Logo menu kippon Dream'), root_path, :class => 'index-lien' %>

    </div>
    <ul>
      <li><%= link_to 'Team', '/membres' %></li>
      <li><%= link_to 'Contact', new_contact_path %></li>
      <li>Boutique</li>
    </ul>
  </nav>
</header>

<% if notice %>
    <p class="notice"><%= notice %></p>
<% end %>

<% if notice %>
    <p class="alert"><%= alert %></p>
<% end %>

<%= yield %>

<footer>
  <div class="div1">
    <% if current_user %>
        <div class="user-role">
          <h5>Ton r√¥le : <%= current_user.role %></h5>
        </div>
    <% end %>
  </div>
  <div class="div2 user-panel">
    <% if user_signed_in? %>
        <li>
          <%= link_to 'Administration', admin_root_path %> | <%= link_to 'Editer le profil', edit_user_path(current_user) %> <%= link_to('Deconnexion', destroy_user_session_path, :method => :delete) %>
        </li>
    <% else %>
        <li>
          <%= link_to('Connexion', new_user_session_path)  %>
        </li>
    <% end %>
  </div>
</footer>


<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</body>
</html>