<div class="container-connect">
  <div class="connect-form">
    <h2 class="connect-title">Connexion</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.text_field :username, autofocus: true, placeholder: 'Votre pseudo', class: 'input-text', id: 'pseudo' %>
          <p class="error-toggle">Pseudo invalide. Vérifiez qu'il fait au moins 8 caractères et qu'il ne
            contient pas de caractères spéciaux</p>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: 'Votre mot de passe', autocomplete: "off", class: 'input-text', id: 'password' %>
          <p class="error-toggle">Mot de passe invalide. Il doit faire au moins 2 caractères et max 15 caractères, contenir au moins un nombre
            et un caractère spécial (ex: a1B2^c3%)</p>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Rester connecté" %>
            </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Se connecter", class: 'blue-button input-login' %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>

