<h1>Editer son profil</h1>

<%= form_for @user, :html => {:class=>'form-admin'} do |f| %>

    <p>
      <%= f.text_field :username, :placeholder=>'Ton pseudo', :class=>'input-text' %>
    </p>

    <p>
      <%= f.text_field :email, :placeholder=>'Ton email', :class=>'input-text' %>
    </p>

    <p>
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
    </p>

    <p>
      <%= f.label :is_femme %>
      <%= f.check_box :is_femme %>
    </p>

    <p>
      <% if @user.avatar %>
          <%= image_tag @user.avatar, size: '100x100' %>
      <% end %>
    </p>

    <div class="field">
      <%= f.text_area :description, :class=>'input-text', :placeholder=>"Décris-toi ici, ça va s'afficher dans tes articles
      et dans ta présentation de la page membre" %>
    </div>

    <p>
      <%= f.label :date_naissance %>
      <%= f.date_select :date_naissance, {:start_year => 1990, order: [:day, :month, :year] } %>
    </p>

    <p>
      <%= f.label :role %>
      <%= f.select :role, options_for_select(%w[Dieu Staff Auteur], 'Auteur') %>
    </p>

  <%= f.submit "Editer mon profil", class: 'blue-button' %>
<% end %>

<%= link_to 'Modifier le mot de passe', change_password_path(@user) %>
